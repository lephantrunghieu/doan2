@model IEnumerable<ECommerceMVC.Data.HoaDon>

@{
    ViewData["Title"] = "Danh sách hóa đơn";
}

<div class="container mt-4">
    <h2 class="mb-3">Danh sách hóa đơn</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Mã HĐ</th>
                <th>Ngày lập</th>
                <th>Tên khách hàng</th>
                <th>Địa chỉ giao</th>
                <th>Trạng thái</th>
                <th>Tổng tiền</th>
                <th>Nhân viên xử lý</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hd in Model)
            {
                var tongTien = hd.ChiTietHds?.Sum(ct => 
        ct.SoLuong * ct.DonGia
    ) ?? 0;
                <tr>
                    <td>@hd.MaHd</td>
                    <td>@hd.NgayDat.ToString("dd/MM/yyyy")</td>
                    <td>@hd.HoTen</td>
                    <td>@hd.DiaChi</td>
                    <td>
    @(hd.MaTrangThai == 0 ? "Chờ xử lý" :
      hd.MaTrangThai == 1 ? "Đang giao" :
      hd.MaTrangThai == 2 ? "Hoàn thành" :
      hd.MaTrangThai == 3 ? "Hủy" : "Không xác định")
</td>
                    <td>@string.Format("{0:N0} ₫", tongTien)</td>
                    <td>
            @(hd.MaNvNavigation != null 
                ? hd.MaNvNavigation.HoTen
                : "")
        </td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@hd.MaHd" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@hd.MaHd" class="btn btn-sm btn-warning">Cập nhật</a>
                        <a asp-action="Invoice" asp-controller="Cart" asp-route-id="@hd.MaHd" class="btn btn-sm btn-primary">Xem hóa đơn</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
