@model ECommerceMVC.Data.Loai

@{
    ViewData["Title"] = "Xóa loại hàng";
}

<div class="container mt-4">
    <h2>Xóa loại hàng</h2>

    <h4>Bạn có chắc muốn xóa loại hàng này?</h4>
    <dl class="row">
        <dt class="col-sm-2">Mã loại</dt>
        <dd class="col-sm-10">@Model.MaLoai</dd>

        <dt class="col-sm-2">Tên loại</dt>
        <dd class="col-sm-10">@Model.TenLoai</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaLoai" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="List" class="btn btn-secondary">Hủy</a>
    </form>
</div>
