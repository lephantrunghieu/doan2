@model ECommerceMVC.Data.KhachHang

@{
    ViewData["Title"] = "Cập nhật khách hàng";
}

<div class="container mt-4">
    <h2>Cập nhật khách hàng</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <!-- hidden để giữ mã KH -->
        <input type="hidden" asp-for="@Model.MaKh" />

        <div class="mb-3">
            <label class="form-label">Tên khách hàng</label>
            <input asp-for="@Model.HoTen" class="form-control" />
            <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Giới tính</label>
            <select asp-for="@Model.GioiTinh" class="form-select">
                <option value="true">Nam</option>
                <option value="false">Nữ</option>
            </select>
            <span asp-validation-for="@Model.GioiTinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Ngày sinh</label>
            <input asp-for="@Model.NgaySinh" type="date" class="form-control" />
            <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Điện thoại</label>
            <input asp-for="@Model.DienThoai" class="form-control" />
            <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Địa chỉ</label>
            <input asp-for="@Model.DiaChi" class="form-control" />
            <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Hình</label>
            <input type="file" name="Hinh" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.Hinh))
            {
                <div class="mt-2">
                    <img src="~/@Model.Hinh" alt="Ảnh KH" width="100" height="100" />
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="List" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
