@model ECommerceMVC.Data.HoaDon
@using System.Globalization

@{
    ViewData["Title"] = "Hóa đơn #" + Model.MaHd;
}

<div class="container py-5">
    <h2 class="text-center">HÓA ĐƠN THANH TOÁN</h2>
    <p><strong>Mã hóa đơn:</strong> @Model.MaHd</p>
    <p><strong>Ngày đặt:</strong> @Model.NgayDat.ToString("dd/MM/yyyy")</p>
    <p><strong>Họ và tên:</strong> @Model.HoTen</p>
    <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>

    <table class="table table-bordered mt-4">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.ChiTietHds)
        {
            <tr>
                <td>@item.MaHhNavigation.TenHh</td>
                <td>@item.SoLuong</td>
                <td>@item.DonGia.ToString("C0", new CultureInfo("vi-VN"))</td>
                <td>@((item.SoLuong * item.DonGia).ToString("C0", new CultureInfo("vi-VN")))</td>
            </tr>
        }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Tổng cộng</strong></td>
                <td>
                    @Model.ChiTietHds.Sum(ct => ct.SoLuong * ct.DonGia).ToString("C0", new CultureInfo("vi-VN"))
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center mt-4">
        <button onclick="window.print()" class="btn btn-primary">In hóa đơn</button>
        <a href="/" class="btn btn-secondary">Về trang chủ</a>
    </div>
</div>
