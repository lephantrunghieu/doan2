@using System.Globalization
@model IEnumerable<ECommerceMVC.ViewModels.CartItem>
@{
	ViewData["Title"] = "Giỏ hàng";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
	<h1 class="text-center text-white display-6">Giỏ hàng</h1>
	<ol class="breadcrumb justify-content-center mb-0">
		<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
		<li class="breadcrumb-item active text-white">Giỏ hàng</li>
	</ol>
</div>
<!-- Single Page Header End -->
<!-- Cart Page Start -->
<div class="container-fluid py-5">
	<div class="container py-5">
		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">Sản phẩm</th>
						<th scope="col">Tên</th>
						<th scope="col">Giá</th>
						<th scope="col">Số lượng</th>
						<th scope="col">Tổng tiền</th>
						<th scope="col">Xử lý</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<th scope="row">
								<div class="d-flex align-items-center">
									<img src="~/@item.Hinh" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="@item.TenHH">
								</div>
							</th>
							<td>
								<p class="mb-0 mt-4">
									<a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHh">
										@item.TenHH
									</a>
								</p>
							</td>
							<td>
								<p class="mb-0 mt-4">@item.DonGia.ToString("C0", new CultureInfo("vi-VN"))</p>
							</td>
							<td>
								<div class="input-group quantity mt-4" style="width: 100px;">
									<div class="input-group-btn">
										<button class="btn btn-sm btn-minus rounded-circle bg-light border" data-id="@item.MaHh" data-quantity="@item.SoLuong">
											<i class="fa fa-minus"></i>
										</button>
									</div>
									<input type="text" class="form-control soluong form-control-sm text-center border-0" value="@item.SoLuong">
									<div class="input-group-btn">
										<button class="btn btn-sm btn-plus rounded-circle bg-light border" data-id="@item.MaHh" data-quantity="@item.SoLuong">
											<i class="fa fa-plus"></i>
										</button>
									</div>
								</div>
							</td>
							<td>
								<p class="mb-0 mt-4">@item.ThanhTien.ToString("C0", new CultureInfo("vi-VN"))</p>
							</td>
							<td>
								<a asp-action="RemoveCart" asp-controller="Cart" asp-route-id="@item.MaHh" class="btn btn-md rounded-circle bg-light border mt-4">
									<i class="fa fa-times text-danger"></i>
								</a>
							</td>

						</tr>
					}
				</tbody>
			</table>
		</div>
		<div class="row g-4 justify-content-end">
			<div class="col-8"></div>
			<div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
				<div class="bg-light rounded">
					<div class="p-4">
						<h1 class="display-6 mb-4"><span class="fw-normal">Tổng cộng</span> giỏ hàng</h1>
						<div class="d-flex justify-content-between mb-4">
							<h5 class="mb-0 me-4">Tổng giá trị đơn hàng:</h5>
							<p class="mb-0">@Model.Sum(p => p.ThanhTien).ToString("C0", new CultureInfo("vi-VN"))</p>
						</div>
						<div class="d-flex justify-content-between">
							<h5 class="mb-0 me-4">Phí giao hàng</h5>
							<div class="">
								<p class="mb-0">0 đ</p>
							</div>
						</div>
					</div>
					<div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
						<h5 class="mb-0 ps-4 me-4">Tổng cộng</h5>
						<p class="mb-0 pe-4">@Model.Sum(p => p.ThanhTien).ToString("C0", new CultureInfo("vi-VN"))</p>
					</div>
					<button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4 btn-checkout" type="button">Thanh toán</button>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Cart Page End -->

							@section Scripts {
    <script>
        $(".btn-plus").click(function () {
            var input = $(this).attr("data-quantity");
            var id = $(this).attr("data-id");
            var newQty = parseInt(input) + 1;
            updateCart(id, newQty);
        });

        $(".btn-minus").click(function () {
            var input = $(this).attr("data-quantity");
            var id = $(this).attr("data-id");
            var newQty = Math.max(1, parseInt(input) - 1);
            updateCart(id, newQty);
        });

        function updateCart(id, quantity) {
            $.post("/Cart/UpdateCart", { id: id, quantity: quantity }, function () {
                location.reload(); // Reload lại trang giỏ hàng
            });
        }

		$(".btn-checkout").click(function(){
			document.location.href = "/Cart/Checkout";
		});
    </script>
}