@model ECommerceMVC.Data.Loai

@{
    ViewData["Title"] = "Cập nhật loại hàng";
}

<div class="container mt-4">
    <h2>Cập nhật loại hàng</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="MaLoai" />

        <div class="mb-3">
            <label class="form-label">Tên loại</label>
            <input asp-for="TenLoai" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Hình</label>
            <input type="file" name="Hinh" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.Hinh))
            {
                <div class="mt-2">
                    <img src="~/@Model.Hinh" width="100" height="100" />
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="List" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
